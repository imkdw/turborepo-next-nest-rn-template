{
  "name": "my-monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf {} + && find . -name \"dist\" -type d -prune -exec rm -rf {} + && find . -name \"tsconfig.tsbuildinfo\" -type f -exec rm -f {} +",
    "setup:local": "docker-compose up -d --wait",
    "create-app": "tsx scripts/create-app.ts",
    "rename-scope": "tsx scripts/rename-scope.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/prompts": "^2.4.9",
    "husky": "^9.1.7",
    "ora": "^9.0.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "tsx": "^4.21.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller"
    ]
  }
}
