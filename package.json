{
  "name": "my-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=!@repo/mobile --filter=!@repo/desktop",
    "dev:mobile": "pnpm --filter @repo/mobile dev",
    "dev:desktop": "pnpm --filter @repo/desktop dev",
    "lint": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf {} + && find . -name \"dist\" -type d -prune -exec rm -rf {} + && find . -name \"tsconfig.tsbuildinfo\" -type f -exec rm -f {} +",
    "api": "pnpm -F api",
    "web": "pnpm -F web",
    "mobile": "pnpm -F mobile",
    "ui": "pnpm -F ui",
    "types": "pnpm -F types",
    "utils": "pnpm -F utils",
    "consts": "pnpm -F consts",
    "exception": "pnpm -F exception",
    "desktop": "pnpm -F @repo/desktop",
    "setup:local": "docker-compose up -d --wait && pnpm api prisma db push",
    "setup:test": "docker-compose up -d --wait && cd apps/api && pnpm dotenv -e ../../.env.test -- prisma db push --force-reset",
    "reset:test": "cd apps/api && pnpm dotenv -e ../../.env.test -- prisma db push --force-reset",
    "prepare": "husky",
    "create-app": "tsx scripts/create-app.ts",
    "my-api": "pnpm -F my-api",
    "my-web": "pnpm -F my-web",
    "my-app": "pnpm -F my-app",
    "my-desktop": "pnpm -F my-desktop"
  },
  "devDependencies": {
    "@types/prompts": "^2.4.9",
    "husky": "^9.1.7",
    "ora": "^9.0.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "tsx": "^4.21.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller"
    ]
  }
}
